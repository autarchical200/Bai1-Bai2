<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextUsername2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/holo_purple"
        android:hint="Nhập tên tài khoản..."
        android:textColorHint="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editTextUsername2"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/holo_purple"
        android:hint="Nhập mật khẩu..."
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewLogin2"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:padding="15dp"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <TextView
        android:text="Quên mật khẩu ?"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_below="@+id/textViewLogin2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="hoặc đăng nhập với"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/textViewLogin2"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLogin2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="230dp">

        <!-- Add your ImageViews for social media login here -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/google"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/facebook"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/twitter"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/instagram"
            android:layout_margin="10dp"/>
    </LinearLayout>
</RelativeLayout>
